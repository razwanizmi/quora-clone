<h1>These are questions by <%= current_user.full_name %></h1>
<% if current_user.questions.count != 0 %>
	<table style="width:100%; text-align:left">
		<tr>
			<th>Title</th>
			<th>Question</th>
			<th>Asked by</th>
		</tr>

		<% current_user.questions.each do |row| %>
			<tr>
				<td><a href="/questions/<%=row.id%>"><%=row.title%></a></td>
				<td><%=row.description%></td>
				<td><%=row.user.full_name%></td>
			</tr>
		<% end %>
	</table>
<% else %>
<p><%= current_user.full_name %> have not asked any questions. Aren't you curious?</p>
<% end %>